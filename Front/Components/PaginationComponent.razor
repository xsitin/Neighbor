@using Common.Models
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">

        <li class="page-item @IsDisabledPreviousPageArrow">
            <a class="page-link" href="@(GetPageRelativeAddress(PaginationInfo.Page - 1))" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        @if (PaginationInfo != null)
        {
            @code{ static int i; };
            @for (i = 1; i <= PaginationInfo.PageCount; i++)
            {
                @code{ int page = i; };
                <li class="page-item @PageButtonActive(page)">
                    <a class="page-link" href="@GetPageRelativeAddress(i)">
                        @i
                    </a>
                </li>
            }
        }


        <li class="page-item @IsDisabledNextPageArrow">
            <a class="page-link" aria-label="Next" href="@GetPageRelativeAddress(PaginationInfo.Page + 1)">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>

    </ul>
</nav>
