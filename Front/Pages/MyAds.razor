@page "/MyAds"
@using Common.Models
@using Board.Data
@inject AdsRepository _repository;

@code
{
    private PaginationInfo<Ad> Ads { get; set; } = new();


    protected override async Task OnInitializedAsync()
    {
        Ads = await _repository.GetMyAsync();
    }
}

<AdsViewer Ads="@Ads.Items"></AdsViewer>
